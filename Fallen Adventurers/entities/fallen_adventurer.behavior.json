		},
		"component_groups": {
			"minecraft:baby_fallen_adventurer": {
				"minecraft:experience_reward": {
					"on_death": "query.last_hit_by_player ? 12 + (query.equipment_count * Math.Random(1,3)) : 0"
				},
				"minecraft:is_baby": {},
				"minecraft:scale": {
					"value": 0.5
				},
				"minecraft:movement": {
